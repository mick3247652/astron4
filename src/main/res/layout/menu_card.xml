<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content" android:background="@color/white">
    <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp" app:srcCompat="@drawable/ic_input_white_24dp"
            android:id="@+id/join_public_channel"
            android:background="@drawable/roundconer" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"/>
    <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp" app:srcCompat="@drawable/ic_public_white_24dp"
            android:id="@+id/create_public_channel"
            android:background="@drawable/roundconer" android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@+id/join_public_channel" android:scaleType="center"/>
    <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp" app:srcCompat="@drawable/ic_group_white_24dp"
            android:id="@+id/create_private_group_chat"
            android:background="@drawable/roundconer"
            android:scaleType="center"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/create_public_channel" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/join_public_channel"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="@+id/join_public_channel"
            app:layout_constraintBottom_toBottomOf="@+id/join_public_channel"
            android:text="@string/join_public_channel" android:textSize="16sp" android:textColor="@color/black"
            android:id="@+id/join_public_channel_text"/>
    <TextView
            android:text="@string/create_public_channel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/create_public_channel"
            app:layout_constraintBottom_toBottomOf="@+id/create_public_channel"
            app:layout_constraintStart_toEndOf="@+id/create_public_channel" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:textColor="@color/black" android:textSize="16sp"
            android:id="@+id/create_public_channel_text"/>
    <TextView
            android:text="@string/create_private_group_chat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/create_private_group_chat"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="@+id/create_private_group_chat"
            app:layout_constraintBottom_toBottomOf="@+id/create_private_group_chat" android:textSize="16sp"
            android:textColor="@color/black" android:id="@+id/create_private_group_chat_text"/>
</android.support.constraint.ConstraintLayout>